<% provide :title, @category.name %>
<div class="container">
  <h1 class="text-left title">
    <i class="fa fa-tags list" aria-hidden="true"></i>
    <%= @category.name %>
    <% if current_user && current_user.admin? %>
      <div class="btn-group">
        <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="#">
          <i class="glyphicon glyphicon-cog"></i><span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to t("modify"), edit_category_path,
              class: "glyphicon glyphicon-wrench" %>
          </li>
          <li><%= link_to t("delete"), category_path,
            class: "glyphicon glyphicon-trash",
              method: :delete, data: {confirm: t("confirm")} %>
          </li>
        </ul>
      </div>
    <% end %>
  </h1>
  <li><%= @category.description %></li>
  <div class="row">
    <%= render partial: "product", collection: @category.products %>
  </div>
</div>
